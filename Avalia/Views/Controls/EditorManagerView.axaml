<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Avalia.ViewModels"
             xmlns:FluentControls="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalia.Views.Controls.EditorManagerView">

  <Design.DataContext>
    <vm:EditorManagerViewModel/>
  </Design.DataContext>
  
  <Panel>
    <FluentControls:Button Content="Test close app!!" Command="{Binding CloseCommand}"/>
    <TextBlock Text="{Binding TestString}"/>
  </Panel>

</UserControl>
